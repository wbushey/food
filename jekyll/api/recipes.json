---
layout: null
---
{% assign recipes = site.recipes | sort: 'title' %}
{
 "data": [{% for r in recipes %}
    {
      "id": "{{r.id | remove_first: "/api/"}}",
      "title": "{{r.title}}",
      "isGlutenFree": {{r.gluten-free | default: false}},
      "ingredients": {{r.ingredients | jsonify}},
      "links": {
        "self": "{{ r.url }}"
      }
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}],
  "links": {
    "self": "{{page.url}}"
  }
}
